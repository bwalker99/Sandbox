<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Basic Building Block</display-name>
  <servlet>
    <servlet-name>index</servlet-name>
    <servlet-class>ca.ubc.ctlt.group.servlet.IndexServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>options</servlet-name>
    <servlet-class>ca.ubc.ctlt.group.servlet.OptionsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>process</servlet-name>
    <servlet-class>ca.ubc.ctlt.group.servlet.ProcessServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ajax</servlet-name>
    <servlet-class>ca.ubc.ctlt.group.servlet.AjaxServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>index</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>options</servlet-name>
    <url-pattern>/options</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>process</servlet-name>
    <url-pattern>/process</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ajax</servlet-name>
    <url-pattern>/ajax/*</url-pattern>
  </servlet-mapping>
</web-app>